<p>
  <%= flash[:success] %>
</p>

<div class='container'>
  <div class='row'>

    <div class='col-md-3'>
      <%= render 'users/left_column', book: Book.new, user: @user %>
    </div>

    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col"></th>
            <th scope="col">Title</th>
            <th scope="col">Opinion</th>
            <th scope="col"></th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.id) do %>
                  <%= image_tag book.user.get_profile_image(80, 80) %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
              <% if book.user == current_user %>
                <td>
                  <%= link_to 'Edit', edit_book_path(book.id), class: 'btn btn-success btn-sm' %>
                </td>
                <td>
                  <%= link_to 'Destroy', book_path(book.id), method: :delete, class: 'btn btn-danger btn-sm' %>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>