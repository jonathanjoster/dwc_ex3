<div class='_new-book-block'>
  <h3>User info</h3>

  <%= render 'users/error_message', obj: @user %>

  <%= form_with model: @user do |f| %>
    <div class='form-group'>
      <label class='form-label' for='titleForm'>Name</label>
      <%= f.text_field :name, class: 'form-control', id: 'titleForm' %>
    </div>
    <div class='form-group'>
      <label class='form-label' for='imageForm'>Image</label>
      <br>
      <%= f.file_field :profile_image, id: 'imageForm' %>
    </div>
    <div class='form-group'>
      <label class='form-label' for='bodyForm'>Introduction</label>
      <%= f.text_area :introduction, class: 'form-control', id: 'bodyForm'  %>
    </div>
    <%= f.submit 'Update User', class: 'btn btn-secondary my-3' %>
  <% end %>
</div>
